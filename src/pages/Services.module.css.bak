/* Gradient Text */
.gradientText {
  background: linear-gradient(90deg, #3b82f6, #06b6d4);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-fill-color: transparent;
  display: inline-block;
}

/* Buttons */
.primaryButton {
  background: #3b82f6;
  color: white;
  padding: 0.75rem 1.5rem;
  border-radius: 0.5rem;
  font-weight: 500;
  display: inline-block;
  transition: all 0.2s;
  text-decoration: none;
  margin-right: 1rem;
  border: none;
  cursor: pointer;
  font-size: 1rem;
}

.primaryButton:hover {
  background: #2563eb;
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(37, 99, 235, 0.2);
}

.secondaryButton {
  background: white;
  color: #1e40af;
  padding: 0.75rem 1.5rem;
  border-radius: 0.5rem;
  font-weight: 500;
  border: 1px solid #dbeafe;
  transition: all 0.2s;
  text-decoration: none;
  display: inline-block;
  cursor: pointer;
  font-size: 1rem;
}

.secondaryButton:hover {
  background: #eff6ff;
  transform: translateY(-1px);
}

/* Main container */
.servicesContainer {
  position: relative;
  width: 100%;
  overflow: hidden;
  padding-bottom: 6rem; /* Added bottom padding */
}

/* CTA section */
.cta-section {
  text-align: center;
  margin-top: 4rem;
  margin-bottom: 8rem; /* Increased bottom margin for more spacing */
}

/* Hero Section */
.hero {
  position: relative;
  background: linear-gradient(135deg, #001F3F 0%, #003366 100%);
  overflow: hidden;
  padding: 8rem 0 6rem; /* Increased top padding */
}

.heroContent {
  position: relative;
  z-index: 10;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1.5rem;
  text-align: center;
}

.heroTitle {
  font-size: 3.5rem; /* Slightly larger title */
  font-weight: 800;
  line-height: 1.2;
  color: white;
  margin-bottom: 1.5rem;
  letter-spacing: -0.5px; /* Improved readability */
}

.heroSubtitle {
  font-size: 1.25rem;
  color: rgba(255, 255, 255, 0.9);
  max-width: 600px;
  margin: 0 auto 3.5rem; /* Increased bottom margin */
  line-height: 1.8; /* Increased line height for better readability */
  padding: 0 1rem; /* Added horizontal padding on mobile */
}

/* Services Grid */
.servicesGrid {
  position: relative;
  padding: 5rem 0;
  background: linear-gradient(to bottom, #f9fafb 0%, #ffffff 100%);
}

.sectionHeader {
  text-align: center;
  max-width: 800px;
  margin: 0 auto 4rem;
  padding: 0 1.5rem;
}

.sectionTag {
  display: inline-block;
  background: #e0f2fe;
  color: #0369a1;
  font-size: 0.875rem;
  font-weight: 600;
  padding: 0.375rem 1rem;
  border-radius: 9999px;
  margin-bottom: 1rem;
}

.sectionTitle {
  font-size: 2.5rem;
  font-weight: 800;
  color: #111827;
  margin-bottom: 1.25rem;
  line-height: 1.2;
}

.sectionSubtitle {
  font-size: 1.125rem;
  color: #4b5563;
  line-height: 1.6;
}

/* Service Card */
.card {
  position: relative;
  background: white;
  border-radius: 1rem;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.05);
  overflow: hidden;
  transition: all 0.3s ease;
  height: 100%;
  display: flex;
  flex-direction: column;
  border: 1px solid #e5e7eb;
}

.card:hover {
  transform: translateY(-4px);
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
}

.cardHeader {
  position: relative;
  padding: 2rem 1.5rem 0;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.cardIcon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 3.5rem;
  height: 3.5rem;
  border-radius: 0.75rem;
  color: white;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.card:hover .cardIcon {
  transform: scale(1.05);
}

.cardChevron {
  color: #d1d5db;
  transition: all 0.3s ease;
}

.card:hover .cardChevron {
  color: #3b82f6;
  transform: translateX(4px);
}

.cardBody {
  padding: 1.5rem;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.cardTitle {
  font-size: 1.5rem;
  font-weight: 700;
  color: #111827;
  margin-bottom: 0.75rem;
  transition: color 0.3s ease;
}

.cardDescription {
  color: #4b5563;
  margin-bottom: 1.5rem;
  line-height: 1.6;
  flex: 1;
}

.featureList {
  margin: 1.5rem 0;
  padding: 0;
  list-style: none;
}

.featureItem {
  display: flex;
  align-items: flex-start;
  margin-bottom: 0.75rem;
  transition: transform 0.2s ease;
}

.featureItem:hover {
  transform: translateX(4px);
}

.featureIcon {
  width: 1.25rem;
  height: 1.25rem;
  margin-right: 0.75rem;
  margin-top: 0.25rem;
  flex-shrink: 0;
}

.featureText {
  color: #374151;
  font-size: 0.9375rem;
  line-height: 1.5;
  transition: color 0.2s ease;
}

.featureItem:hover .featureText {
  color: #111827;
}

.cardFooter {
  margin-top: auto;
  padding: 1.25rem 1.5rem;
  border-top: 1px solid #f3f4f6;
}

.learnMoreLink {
  display: inline-flex;
  align-items: center;
  color: #2563eb;
  font-weight: 500;
  font-size: 0.9375rem;
  transition: all 0.2s ease;
}

.learnMoreLink:hover {
  color: #1d4ed8;
}

.learnMoreIcon {
  width: 1rem;
  height: 1rem;
  margin-left: 0.5rem;
  transition: transform 0.2s ease;
}

.learnMoreLink:hover .learnMoreIcon {
  transform: translateX(2px);
}

/* Responsive Design */
@media (min-width: 768px) {
  .hero {
    padding: 8rem 0;
  }
  
  .heroTitle {
    font-size: 3.75rem;
  }
  
  .sectionTitle {
    font-size: 3rem;
  }
}

/* Animation Classes */
.fadeInUp {
  animation: fadeInUp 0.6s ease-out forwards;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Decorative Elements */
.decorativeBlob {
  position: absolute;
  border-radius: 50%;
  filter: blur(40px);
  opacity: 0.7;
  z-index: 0;
}

.blob1 {
  width: 300px;
  height: 300px;
  background: rgba(59, 130, 246, 0.2);
  top: -100px;
  right: -100px;
}

.blob2 {
  width: 400px;
  height: 400px;
  background: rgba(6, 182, 212, 0.15);
  bottom: -150px;
  left: -100px;
}
